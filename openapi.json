                                        "ocs"
                                    ],
                                    "properties": {
                                        "ocs": {
                                            "type": "object",
                                            "required": [
                                                "meta",
                                                "data"
                                            ],
                                            "properties": {
                                                "meta": {
                                                    "$ref": "#/components/schemas/OCSMeta"
                                                },
                                                "data": {
                                                    "type": "object",
                                                    "required": [
                                                        "projectId",
                                                        "baseCurrency",
                                                        "points"
                                                    ],
                                                    "properties": {
                                                        "projectId": {
                                                            "type": "string"
                                                        },
                                                        "baseCurrency": {
                                                            "type": "string"
                                                        },
                                                        "points": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "object",
                                                                "required": [
                                                                    "fetchedAt",
                                                                    "rate",
                                                                    "currencyName",
                                                                    "source"
                                                                ],
                                                                "properties": {
